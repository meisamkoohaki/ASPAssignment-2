@model IEnumerable<Assignment2BaseballWebsite.Models.Register>

@{
    ViewData["Title"] = "Index";
}


    <style>
        p {
            color: white;
            font-weight: bold;
            width: 80%;
            font-family: 'Comic Sans MS', cursive;
            font-size: 35px;
            margin-left: 10%;
        }

        .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td{
            padding:13px;
        }

        .table{
            margin-left:-175px
        }
        

    </style>

    
<table class="table">
    <thead>
        <tr>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.BirthMonth)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.BirthDay)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.BirthYear)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.StreetNumber)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.StreetName)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.EmergencyFirstName)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.EmergencyLastName)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.EmergencyRelationship)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.EmergencyPhoneNumber)
            </th>
            <th class="player-th">
                @Html.DisplayNameFor(model => model.teamInfo)
            </th>           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmergencyFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmergencyLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmergencyRelationship)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmergencyPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.teamInfo.HomeField)
            </td>
            <td>
                <a class="playerCrudLink" asp-action="Details" asp-route-id="@item.RegisterId">Details</a>
                <a class="playerCrudLink" asp-area="Identity" asp-action="Edit" asp-route-id="@item.RegisterId">Edit</a>
                <a class="playerCrudLink" asp-area="Identity" asp-action="Delete" asp-route-id="@item.RegisterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
