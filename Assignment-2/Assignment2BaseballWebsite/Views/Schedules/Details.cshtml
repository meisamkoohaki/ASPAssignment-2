<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Game Details</title>
    @model Assignment2BaseballWebsite.Models.Schedule

    <style>

        #sch {
            position: relative;
            top: 100px;
            display: inline;
            text-align: center;
            font-size:28px;
            font-weight: 800;
        }

        #score1 {
            margin-left: 15%;
        }     
        #score2 {
            margin-left: 10%;
        }     
        #score3 {
            margin-left: 10%;
        }    
        #score4 {
            margin-left: 10%;
        }
        #datch {
            margin-left: 10%;
        }
        #detail {
            position: relative;
            margin-top: 300px;
            margin-left: 30%;
        }

    </style>

</head>
<body>
    <header>
        <div id="logo">
            <img src="../images/header3-1.png" id="header_logo" alt="BLUE GEEKS BASEBALL CLUB">
        </div>
    </header>
    <h2>Game Details</h2>
        <hr />
        <div id="sch">
            <label id="score1">@Html.DisplayFor(model => model.teamInfo.TeamName)</label>
            <label id="score2">@Html.DisplayFor(model => model.HomeTeamScore)</label>
            <label id="datch">-</label>
            <label id="score3"> @Html.DisplayFor(model => model.AwayTeamScore)</label>
            <label id="score4">@Html.DisplayFor(model => model.teamInfo.TeamName)</label>
        </div>
        <div id="detail">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.GameDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.GameDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Time)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Time)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.ScheduleId">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
</body>
</html>



